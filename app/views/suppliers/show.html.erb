<h1>Suppliers</h1>
<div style="width:800px;height:500px;background-color:white;margin:auto;border:3px solid #333333;overflow:scroll;">
<table class="table table-hover"style="border:1px solid rgb(221,221,221);margin:auto; ">
  <tr style="background-color:#ffcccc">
    <th> S.NO</th>
    <th>COMPANY NAME</th>
    <th>CONTACT PERSON</th>
<th></th>
  </tr>
  <%@i=0%>
<%@supplier.each do |s|%>

  <tr>
    <td><%@i+=1%><%=@i%></td>
    <td><%=s.name%></td>
    <td><%=s.contact_name%></td>
    <td><%=link_to_modal "edit", {:controller=>'suppliers',:action=>'edit',:id=>s.id},:class=>"btn-small btn-primary"%></td>
  </tr>

<%end%>
</table>
    <br/>
    <%=link_to_modal "Add New suppliers", {:controller=>'suppliers',:action=>'new'},:class=>"btn-large btn-success"%>
</div>
