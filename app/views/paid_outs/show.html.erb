<div class="page-header"style="margin-top: 10px;">
    <h1 style="text-align:left;color:whitesmoke;font-variant:small-caps;font-family:fantasy;margin-left:20px;">Paid Outs</h1>
</div>

<div style="width:800px;height:500px;background-color:white;margin:auto;border:3px solid #333333;overflow:scroll;">
  
<table class="table table-striped table-bordered">
  <tr style="background-color:#ffcccc">
    <th style="background-color:rgb(0, 108, 204);color: white;">S.NO</th>
    <th style="background-color:rgb(0, 108, 204);color: white;">Created At</th>
    <th style="background-color:rgb(0, 108, 204);color: white;">To Whom</th>
    <th style="background-color:rgb(0, 108, 204);color: white;">Amount</th>
    <th style="background-color:rgb(0, 108, 204);color: white;">Reason</th>

    
  </tr>
  <%@i=0%>
<%@paid_outs.each do |s|%>

  <tr>
    <td><%@i+=1%><%=@i%></td>
    <td><%=s.created_at%></td>
    <td><%=s.to%></td>
    <td><%=s.amount%></td>
    <td> <%=s.reason%></td></tr>

<%end%>
</table>
    <br/>
    <%=link_to_modal "Pay", {:controller => 'paid_outs', :action => 'new'}, :class=> "btn-large btn-success" %>
</div>
